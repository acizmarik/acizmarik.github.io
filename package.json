{
  "name": "custom-bulma",
  "version": "1.0.0",
  "description": "Personalized Bulma CSS",
  "main": "sass/style.scss",
  "scripts": {
    "css-minify": "sass --no-source-map sass/style.scss static/styles/style.css --style=compressed",
    "css-build": "sass --no-source-map sass/style.scss static/styles/style.css",
    "css-watch": "npm run css-build -- --watch",
    "start": "npm run css-watch"
  },
  "author": "Andrej Čižmárik",
  "license": "MIT",
  "devDependencies": {
    "bulma": "^0.9.4",
    "sass": "^1.85.0"
  }
}
